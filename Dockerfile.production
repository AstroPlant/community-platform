FROM node:12-alpine

# Create app directory
WORKDIR /usr/src/app

# Copy packages to the docker image
COPY package*.json ./

# Installing dependencies
RUN npm ci --only=production

# Copy the rest of the content
COPY . .

ENV NEXT_PUBLIC_STRAPI_PUBLIC_URL=
ENV NEXT_PUBLIC_STRAPI_CLUSTER_URL=

RUN npm run build

# Opening port 3000
EXPOSE 3000:3000

VOLUME [ "./:/src/app"]

CMD npm start