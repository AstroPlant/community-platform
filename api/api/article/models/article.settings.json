{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "name": "Article"
  },
  "options": {
    "increments": true
  },
  "attributes": {
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "content": {
      "type": "richtext",
      "required": true,
      "minLength": 520
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "preview": {
      "type": "text",
      "required": false,
      "maxLength": 140,
      "minLength": 1
    },
    "categories": {
      "collection": "category",
      "via": "article"
    },
    "published": {
      "type": "boolean",
      "default": false
    },
    "published_at": {
      "type": "date"
    }
  }
}
